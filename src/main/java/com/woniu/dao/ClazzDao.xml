<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniu.dao.ClazzDao">
	<select id="findAll" resultType="clazz">
		select * from clazz
	</select>

	<select id="findOne" parameterType="int" resultType="clazz">
		select * from clazz where cid=#{cid}
	</select>

	<select id="selectByPage" parameterType="pageBean"
		resultType="clazz">
		select
		*
		from clazz
		<where>
			<if test="queryVal!=null">
				cname like concat('%',#{queryVal},'%')
			</if>
		</where>
		<!-- limit 起始位置,每页行数 -->
		<!-- sql拼接时候#{} 不能进行运算，应该使用${} -->
		limit ${(nowPage-1)*pageRow},${pageRow}
	</select>

	<select id="countAll" parameterType="pageBean" resultType="int">
		select count(*) from clazz
		<where>
			<if test="queryVal!=null">
				uname like concat('%',#{queryVal},'%')
			</if>
		</where>
	</select>

	<delete id="delete" parameterType="int">
		delete from clazz where cid=#{cid}
	</delete>

	<insert id="save" parameterType="clazz">
		insert into clazz
		(cid,disid,classroomid,cname,cpeoplecount,cstarttime,clasttime,cstatus)
		values(null,#{disid},#{classroomid},#{cname},#{cpeoplecount},#{cstarttime},#{clasttime},#{cstatus})
	</insert>

	<update id="update" parameterType="clazz">
		update clazz
		<set>
			<if test="cname!=null">
				cname=#{cname},
			</if>
			<if test="cpeoplecount!=null">
				cpeoplecount=#{cpeoplecount},
			</if>
			<if test="cstarttime!=null">
				cstarttime=#{cstarttime},
			</if>
			<if test="clasttime!=null">
				clasttime=#{clasttime},
			</if>
			<if test="cstatus!=null">
				cstatus=#{cstatus},
			</if>
		</set>
		<where>
			cid=#{cid}
		</where>
	</update>
</mapper>